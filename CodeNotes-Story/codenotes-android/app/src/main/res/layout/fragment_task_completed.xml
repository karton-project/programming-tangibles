<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/unit20"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/current_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/unit20" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/unit200"
            android:layout_height="@dimen/unit200"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_fileName="lottie/star.json"
            app:lottie_loop="false" />

        <TextView
            android:id="@+id/next_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/unit20" />

    </LinearLayout>

</FrameLayout>